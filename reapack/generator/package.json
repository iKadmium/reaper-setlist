    "@types/bun": "latest",
    "@types/xml2js": "^0.4.14"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@contentful/rich-text-from-markdown": "^16.0.0",
    "commander": "^14.0.0",
    "marked": "^15.0.12",
    "xml2js": "^0.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}